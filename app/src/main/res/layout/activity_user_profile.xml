<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Profile.UserProfile">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:background="@drawable/profile_background">

            <ImageView
                android:id="@+id/signup_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="20dp"
                android:src="@drawable/baseline_white_arrow_back_24"
                android:transitionName="transition_back_arrow_btn"
                android:contentDescription="@string/botao_de_voltar" />

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/white_circle"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image"
                android:text="Angelo Lorensi Mozzaquatro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/muli"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_username"
                android:text="angelolorensi@gmail.com"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:fontFamily="@font/muli"
                android:textSize="16sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_info_layout"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@drawable/white_rectangle"
            android:layout_marginTop="-120dp"
            android:layout_gravity="center"
            android:elevation="30dp">

            <RelativeLayout
                android:id="@+id/profile_main_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/profile_purchases"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_corners_green">

                    <ImageView
                        android:id="@+id/profile_purchases_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_shopping_cart_24"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minhas Compras"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:layout_below="@id/profile_purchases_icon"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_sells"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/profile_purchases"
                    android:background="@drawable/round_corners_green">

                    <ImageView
                        android:id="@+id/profile_sells_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_shopping_bag_24"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minhas Vendas"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:layout_below="@id/profile_sells_icon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_listings"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/profile_sells"
                    android:background="@drawable/round_corners_green">

                    <ImageView
                        android:id="@+id/profile_listings_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_sell_24"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meus Anúncios"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:layout_below="@id/profile_listings_icon"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profile_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_main_btns"
                android:padding="10dp">

                <TextView
                    android:id="@+id/profile_info_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/green"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/profile_info_password"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/profile_info_phoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/profile_info_password"
                    android:textColor="@color/green"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/profile_info_phoneNo"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/profile_info_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/profile_info_phoneNo"
                    android:textColor="@color/green"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/profile_info_adress"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/profile_info_cep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CEP :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/profile_info_adress"
                    android:textColor="@color/green"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/profile_info_cep"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:layout_below="@id/profile_info_layout"
            android:layout_gravity="center"
            android:text="Editar Perfil"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


</ScrollView>



